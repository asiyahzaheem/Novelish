      .user-details
        .form__user-details
          .user-form
            span.heading__title Your account settings
            form.form.form-user-data
              .form-group
                label(for='name') Name 
                input#name(type='name', value=`${user.name}`, required)
              .form-group
                label(for='email') Email 
                input#email(type='email', value=`${user.email}`, required)
              .form-group.form__photo-upload
                img.form__user-photo(src=`/img/users/${user.photo}`)
                input.form__upload(type='file' accept='image/*' id='photo' name='photo')
                label(for='photo') Choose new photo
              .form-group.form__links
                button.btn.btn__full.btn__save-user-form Save settings
        .line &nbsp
        .form__user-details
          .user-form
            span.heading__title Password Change
            form.form.form-user-password
              .form-group
                label(for='currentPassword') Current Password 
                input#currentPassword(type='password', placeholder='********', required)
              .form-group
                label(for='newPassword') New Password 
                input#newPassword(type='password', placeholder='********', required)
              .form-group
                label(for='confirmPassword') Confirm Password
                input#confirmPassword(type='password', placeholder='********', required)
              .form-group.form__links
                button.btn.btn__full.btn__save-password-form Save password
