extends base
block content
  section.section__book
    .book
      .cover
        .cover-img
          img(src=`/img/books/${book.image}`)
        if user
          a.btn.btn__link.btn__full.addToCart(data-bookId=`${book.id}` data-price=`${book.price}`) Add to cart
        else
          a.btn.btn__link.btn__full(href='/login') Login to purchase!
        a.btn.btn__link.btn__outline Add a review
      .details
        .heading__secondary= book.name
        .heading__tertiary.author=book.author
        .ratings
          .rating__stars
            each star in [1,2,3,4,5]
              svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class=`icon__review ${book.ratingsAverage >= star ? 'active' : 'inactive'}`)
                  path(stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z")
          .ratings__avg.text__small=book.ratingsAverage
          .ratings__qty.text__small=`${book.ratingsQuantity} rating(s)`
          .reviews.text__small=`${book.reviews.length} review(s)`
        .heading__tertiary.price=`$ ${book.price}`
        .description
          p.text__small=`${book.description}`
        .text__small.genres.bold=`Genres: ${book.genre[0]} ${book.genre[1]} ${book.genre[2]}`
        .extra-details
          .text__small.bold=`Page Count: ${book.pageCount}`
          .text__small.bold=`ISBN: ${book.ISBN}`
        